<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avengers.MainActivity">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scar"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/scar2" />

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/natasha"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="@string/full_name_natasha_romanoff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/alias_black_widow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="@string/natasha_was_born_in_stalingrad_now_volgograd_russian_sfsr_ussr_the_first_and_best_known_black_widow_is_a_russian_agent_trained_as_a_spy_martial_artist"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="@string/abilities_expert_spy_tactician_master_martial_artist_and_hand_to_hand_combatant_slowed_aging_and_enhanced_immune_system_expert_marksman_and_mastery_of_various_weapons_skilled_hypnotist"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/first_appearance_tales_of_suspense_52_april_1964"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/created_by_stan_lee_jack_kirby"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="@string/team_affiliations_avengers_champions_daughters_of_liberty_heroes_for_hire_kgb_marvel_knights_mighty_avengers_lady_liberators_secret_avengers_s_h_i_e_l_d_thunderbolts"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>