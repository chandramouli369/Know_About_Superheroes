<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avengers.MainActivity">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scar"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/clintw" />

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Clint Barton"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="@string/full_name_clint_barton"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/alias_hawkeye"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="@string/clinton_francis_barton_is_a_fictional_character_portrayed_by_jeremy_renner_in_the_marvel_cinematic_universe_mcu_media_franchise_based_on_the_marvel_comics_character_of_the_same_name_commonly_by_his_alias_hawkeye_barton_is_depicted_as_an_expert_marksman_archer_and_hand_to_hand_combatant_with_his_preferred_weapon_being_a_recurve_bow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="@string/team_affiliations_avengers_a_i_army_department_of_defense_force_works_new_avengers_guardians_of_the_galaxy_illuminati_mighty_avengers"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/first_appearance_thor_2011"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/created_by_stan_lee_jack_kirby"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="@string/team_affiliations_avengers_a_i_army_department_of_defense_force_works_new_avengers_guardians_of_the_galaxy_illuminati_mighty_avengers_s_h_i_e_l_d_stark_industries_stark_resilient_thunderbolts"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>